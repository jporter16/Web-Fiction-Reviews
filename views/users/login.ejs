<% layout('layouts/boilerplate')%>

<div class="container d-flex justify-content-center align-items-center mt-2">
  <div class="row">
    <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
      <div class="card shadow mb-3">
        <img
          src="https://res.cloudinary.com/dj3dni7xt/image/upload/v1679290214/Welp/home-page-cropped_pdyznu.jpg"
          alt=""
          class="card-img-top"
        />
        <div class="card-body">
          <h5 class="card-title">Login</h5>

          <form action="/login" method="Post" class="validated-form" novalidate>
            <div class="mb-4">
              <label class="form-label" for="username">Username</label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
              <div class="valid-feedback">Looks good!</div>
            </div>

            <div class="mb-3">
              <label class="form-label" for="password">Password</label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
              <div class="valid-feedback">Looks good!</div>
            </div>
            <div class="d-grid gap-2">
              <button class="btn btn-success">Login</button>
            </div>
          </form>
          <p class="mt-3">
            <a href="recover-username">I forgot my username</a>
          </p>
          <p><a href="reset-password">I forgot my password</a></p>
        </div>
      </div>
    </div>
  </div>
</div>
